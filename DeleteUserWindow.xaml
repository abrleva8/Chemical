<Window x:Class="Don_tKnowHowToNameThis.DeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Don_tKnowHowToNameThis"
        mc:Ignorable="d"
        Title="DeleteUserWindow" Height="197" Width="304">
    <Grid>

        <StackPanel Margin="5">
            <Label Content="Удаление" HorizontalContentAlignment="Center"/>

            <Label Content="Имя пользователя" Target="{Binding ElementName=LoginTextBox}" />
            <ComboBox Name="LoginToDeleteTextBox" DropDownClosed="LoginToDeleteTextBox_DropDownClosed"/>
            <Button Margin="20 20" Width="110" Click="Button_Click">Удалить</Button>
        </StackPanel>

    </Grid>
</Window>
