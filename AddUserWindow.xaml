<Window x:Class="Don_tKnowHowToNameThis.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Don_tKnowHowToNameThis"
        mc:Ignorable="d"
        Title="AddUserWindow" Height="204" Width="306"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <StackPanel Margin="5">
            <Label Content="Добавление" HorizontalContentAlignment="Center"/>

            <Label Content="Имя пользователя" Target="{Binding ElementName=LoginTextBox}" />
            <TextBox Name="AddLoginTextBox" />

            <Label Content="Пароль" Target="{Binding ElementName=PasswordTextBox}" />
            <TextBox Name="AddPasswordTextBox" />

            <Button Margin="20 20" Width="110" Click="AddButton_Click">Добавить</Button>

        </StackPanel>

    </Grid>
</Window>
