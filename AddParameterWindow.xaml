<Window x:Class="Don_tKnowHowToNameThis.AddParameterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Don_tKnowHowToNameThis"
        mc:Ignorable="d"
        Title="AddParameterWindow" Height="250" Width="265"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <StackPanel Margin="5">
            <Label Content="Добавление параметра" HorizontalContentAlignment="Center"/>

            <Label Content="Название параметра" Target="{Binding ElementName=AddNameTextBox}" />
            <TextBox Name="AddNameTextBox" />

            <Label Content="Символ" Target="{Binding ElementName=AddSymbolTextBox}" />
            <TextBox Name="AddSymbolTextBox"/>

            <Label Content="Условное обозначение" Target="{Binding ElementName=AddUnitTextBox}" />
            <TextBox Name="AddUnitTextBox"/>

            <Button Margin="20 20" Width="110" Click="ButtonAdd_OnClick">Добавить</Button>

        </StackPanel>

    </Grid>
</Window>
